      results: ".search-result",
      includebodysearch:true,
      displaySearchInfo:false
    });
    $(".topic li").eq(0).addClass("active");
    $(".topic-article-content").eq(0).addClass("show");
    $(".topic li").each(function(index) {
        $(this).click(function() {
            $(".topic-article-content").removeClass("show");
            $(".topic-header").removeClass("active");
            $(".topic-article-content").eq(index).addClass("show");
            $(this).addClass("active")
        });
    })

    $(".article-list-hearder li").each(function(index) {
        $(this).click(function() {
            $(".article-list-hearder li").removeClass("active");
            $(".article-list").removeClass("active");
            $(".article-list").eq(index).addClass("active");
            $(this).addClass("active")
        });
    })
