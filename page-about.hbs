{{!< default}}

{{!-- The tag above means: insert everything in this file
into the {body} tag of the default.hbs template --}}

{{> 'content-banner' parth_url=(asset "images/about_us.svg") description=(t "about_us_des") title=(t "about_us")}}

{{#post}}
 <div class="inner about-us flex-box">
{{!-- Everything inside the #post block pulls data from the page --}}
        <div class="img-box">
            {{#if feature_image}}
                {{!-- This is a responsive image, it loads different sizes depending on device
                https://medium.freecodecamp.org/a-guide-to-responsive-images-with-ready-to-use-templates-c400bd65c433 --}}
                <img
                    src="{{img_url feature_image}}"
                    alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                />
            {{/if}}
        </div>
        <div class="content">
            <h1>{{title}}</h1>
            <p>{{content}}</p>
        </div>

</div>
{{/post}}


<div class="outer outerbg">
    <div class="inner cooperation-project">
            <h6 class="center">合作项目</h6>
            <h3 class="center">应用场景</h3>
        <div class="flex-box-between">
              {{#get "posts" order="published_at asc" filter="tag:'case'" limit=3}}
                {{#foreach posts}}
                    <div class="project-item">
                        <a href="{{url}}">
                            <img src="{{img_url feature_image}}">
                            <h6>{{title}}</h6>
                        </a>
                    </div>
                {{/foreach}}
            {{/get}}
        </div>
        <div class="center"><button class="button-2"><a href="/case">查看更多</a></button></div>
    </div>
</div>
<div class="inner awards">
            <h6 class="center">HashData奖项与荣誉</h6>
            <h3 class="center">HashData奖项与荣誉</h3>
        <ul class="flex-box-between">

            {{#get "posts" limit="all" filter="tag:'honors'"}}
                {{#foreach posts}}
                    <li>
                        <a href="{{url}}">
                            <div class="circle_img_2"> <img src="{{img_url feature_image}}"></div>
                            <h6>{{title}}</h6>
                            <p class="detail">{{excerpt}}</p>
                        </a>
                    </li>
                {{/foreach}}
            {{/get}}

        </ul>
</div>


