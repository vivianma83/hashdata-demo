{{!< default}}

{{!-- The tag above means: insert everything in this file
into the {body} tag of the default.hbs template --}}

{{#contentFor "scripts"}}
    <script>
    </script>
{{/contentFor}}
{{#post}}
{{> 'content-banner' parth_url=(asset "images/custom-case.svg")}}
{{/post}}

<div class="inner case-box">
        {{#get "tags" order="published_at asc" filter="name:['交通行业','能源行业','金融行业','互联网行业','通信行业']"}}
            <div class="topic">
                <ul class="topic-header-lists flex-box">
                    {{#foreach tags}}
                                <li class="topic-header">
                                    {{name}}
                                    {{!-- <div class="topic-count">
                                        {{plural count.posts empty="No articles" singular="1 article" plural="% articles"}}
                                    </div> --}}
                                </li>
                                {{!-- <a class="topic-more button-arrow button-arrow-right" href="{{url}}">View All</a> --}}
                    {{/foreach}}
                </ul>   
                <div class="article">
                    {{#foreach tags}}
                        {{#get "posts" order="published_at asc" filter="tag:{{slug}}" limit="5" as |featured|}}
                            <ul class="topic-article-content card2 flex-box-between">
                                {{#foreach featured}}
                                    <li class="topic-article">
                                        <div class="content_with_img">
                                            <a class="post-card-link" href="{{url}}">
                                                {{#if feature_image}}
                                                        <img class="post-card-image"
                                                            srcset="{{img_url feature_image size="s"}} 300w,
                                                                    {{img_url feature_image size="m"}} 600w,
                                                                    {{img_url feature_image size="l"}} 1000w,
                                                                    {{img_url feature_image size="xl"}} 2000w"
                                                            sizes="(max-width: 1000px) 400px, 800px"
                                                            src="{{img_url feature_image size="m"}}"
                                                            alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                                                            loading="lazy"
                                                        />

                                                {{/if}}
                                                <h6 class="title">{{title}}</h6>
                                                <p class="excerpt">{{excerpt}}</p>
                                            </a>
                                        </div>    
                                    </li>
                                {{/foreach}}
                            </ul>
                        {{/get}}
                    {{/foreach}}    
                </div>        
            </div>
        {{/get}}
</div>